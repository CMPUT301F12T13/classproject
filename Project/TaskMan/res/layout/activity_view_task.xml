<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bgMinorColor"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/task_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Some Task Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/task_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.25"
            android:text="Edit" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView android:id="@+id/task_descr"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:gravity="bottom"
            android:textColor="#00CCFF"   
            android:text="Description" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#00CCFF"
            android:orientation="vertical" >
        </LinearLayout>
            
        <TextView
            android:id="@+id/task_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A potentially-long Task description"
            android:textAppearance="?android:attr/textAppearanceMedium" />

         <TextView android:id="@+id/req_fulfillments"
             android:layout_width="fill_parent"
             android:layout_height="30dp"
             android:layout_marginLeft="5dp"
             android:gravity="bottom"
             android:textColor="#00CCFF"   
             android:text="Requirements" />
         
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="#00CCFF"
             android:orientation="vertical" >
         </LinearLayout>

		<ListView
		    android:id="@+id/requirement_list"
		    android:layout_width="match_parent"
		    android:layout_height="150dp">
		</ListView>            
         
         <TextView android:id="@+id/activity"
             android:layout_width="fill_parent"
             android:layout_height="30dp"
             android:gravity="bottom"
             android:textColor="#00CCFF"   
             android:layout_marginLeft="5dp"
             android:text="Activity" />
     
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="2dp"
             android:background="#00CCFF"
             android:orientation="vertical" >
         </LinearLayout>
         
         <ListView
             android:id="@+id/fulfillment_list"
             android:layout_width="match_parent"
             android:layout_height="match_parent" >

         </ListView>
            
    </LinearLayout>    

</LinearLayout>