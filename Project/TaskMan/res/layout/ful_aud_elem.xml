<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/fulTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="On XX/XX/XX:"
        android:textSize="9dp" >

    </TextView>
    
    <ImageButton
        android:id="@+id/audio_play_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:contentDescription="Audio Play Button"
        android:src="@drawable/playbtn" />

    <ImageButton
        android:id="@+id/audio_ful_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/audio_play_btn"
        android:contentDescription="Audicon"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:src="@drawable/audicon" />

</RelativeLayout>
