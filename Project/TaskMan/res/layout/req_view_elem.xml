<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/reqContentImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/imgicon" />

    <TextView
        android:id="@+id/reqDescriptionText"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_toLeftOf="@+id/reqContentImg"
        android:ems="10"
        android:text="Requirement Description"
        android:textSize="15dp" >
    </TextView>
    
    <Button
        android:id="@+id/reqFulfillBtn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="Fulfill"
        android:textSize="15dp"
        android:layout_marginTop="20dp" >
    </Button>
    
</RelativeLayout>
